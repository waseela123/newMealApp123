<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newpg"
    android:foregroundTint="#040303"
    tools:context=".AddMealFragment">


    <EditText
        android:id="@+id/etMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="Enter Meal Name"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/etMealPrice"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etMealPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Enter Meal Price"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/etMealIngredients"
        app:layout_constraintStart_toStartOf="@+id/etMealName"
        app:layout_constraintTop_toBottomOf="@+id/etMealName" />

    <EditText
        android:id="@+id/etMealIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:hint="Enter Meal Ingredients"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/ivAddMealFragment"
        app:layout_constraintStart_toStartOf="@+id/etMealPrice"
        app:layout_constraintTop_toBottomOf="@+id/etMealPrice" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="31dp"
        android:shadowColor="#000000"
        android:text="Enter the important data for the new meal:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#100F0F"
        android:textColorHint="#100F0F"
        android:textColorLink="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/etMealName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivAddMealFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="43dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/photoadd"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMealFragment"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/etMealIngredients"
        app:layout_constraintTop_toBottomOf="@+id/etMealIngredients" />

    <Button
        android:id="@+id/btnAddMealFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:backgroundTint="@color/background4"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAddMealFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>