<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="#5E0600"
    tools:context=".AddMealFragment">


    <EditText
        android:id="@+id/etMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:drawableTint="#5E0600"
        android:ems="10"
        android:foregroundTint="#5E0600"
        android:inputType="text"
        android:text="Enter Meal Name"
        android:textColorLink="#5E0600"
        app:layout_constraintBottom_toTopOf="@+id/etMealPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etMealPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Meal Price"
        app:layout_constraintBottom_toTopOf="@+id/etMealIngredients"
        app:layout_constraintStart_toStartOf="@+id/etMealName"
        app:layout_constraintTop_toBottomOf="@+id/etMealName" />

    <EditText
        android:id="@+id/etMealIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Meal Ingredients"
        app:layout_constraintBottom_toTopOf="@+id/ivAddMealFragment"
        app:layout_constraintStart_toStartOf="@+id/ivAddMealFragment"
        app:layout_constraintTop_toBottomOf="@+id/etMealPrice" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="323dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="37dp"
        android:shadowColor="#5E0600"
        android:text="Enter the important data for the new meal:"
        android:textColorHint="#5E0600"
        android:textColorLink="#5E0600"
        app:layout_constraintBottom_toTopOf="@+id/etMealName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivAddMealFragment"
        android:layout_width="129dp"
        android:layout_height="0dp"
        android:layout_marginBottom="73dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMealFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMealIngredients" />

    <Button
        android:id="@+id/btnAddMealFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="186dp"
        android:backgroundTint="#5E0600"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAddMealFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>