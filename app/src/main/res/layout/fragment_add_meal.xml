<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg2"
    android:foregroundTint="#040303"
    tools:context=".AddMealFragment">


    <EditText
        android:id="@+id/etMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:drawableTint="#5E0600"
        android:ems="10"
        android:foregroundTint="#5E0600"
        android:hint="Enter Meal Name"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorLink="#5E0600"
        app:layout_constraintBottom_toTopOf="@+id/etMealPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etMealPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Enter Meal Price"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etMealIngredients"
        app:layout_constraintStart_toStartOf="@+id/etMealName"
        app:layout_constraintTop_toBottomOf="@+id/etMealName" />

    <EditText
        android:id="@+id/etMealIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="289dp"
        android:ems="10"
        android:hint="Enter Meal Ingredients"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etMealPrice"
        app:layout_constraintTop_toBottomOf="@+id/etMealPrice" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="232dp"
        android:shadowColor="#100F0F"
        android:text="Enter the important data for the new meal:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#7C0909"
        android:textColorHint="#100F0F"
        android:textColorLink="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ivAddMealFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivAddMealFragment"
        android:layout_width="129dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:src="@drawable/photoadd"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMealFragment"
        app:layout_constraintStart_toStartOf="@+id/etMealIngredients"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnAddMealFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="137dp"
        android:backgroundTint="#5E0600"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivAddMealFragment"
        app:layout_constraintTop_toBottomOf="@+id/ivAddMealFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>