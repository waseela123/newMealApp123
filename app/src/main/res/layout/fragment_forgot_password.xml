<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg2">

    <EditText
        android:id="@+id/etEmailForgotPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="Enter email to reset..."
        android:inputType="textEmailAddress"
        android:textColorHint="#635555"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnResetForgotPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResetForgotPassword"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="361dp"
        android:backgroundTint="#5E0600"
        android:foregroundTint="#5E0600"
        android:shadowColor="#5E0600"
        android:text="Reset"
        android:textColorLink="#5E0600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etEmailForgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/etEmailForgotPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>