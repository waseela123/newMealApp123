<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newpg">

    <EditText
        android:id="@+id/etEmailForgotPassword"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Enter email to reset..."
        android:inputType="textEmailAddress"
        android:textColorHint="#635555"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnResetForgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackForgotPassword"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="287dp"
        android:backgroundTint="@color/background4"
        android:text="Back"
        app:icon="@drawable/backicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnResetForgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailForgotPassword" />

    <Button
        android:id="@+id/btnResetForgotPassword"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="287dp"
        android:backgroundTint="@color/background4"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBackForgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/etEmailForgotPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>