<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newpg">
    <!-- recycler_view_item.xml -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="20dp">


        <ImageView
            android:id="@+id/ivFavouiteIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:src="@drawable/ic_fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ivMealimage"
            app:layout_constraintTop_toBottomOf="@+id/tvMealName" />

        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="183dp"
            android:layout_height="58dp"
            android:layout_marginEnd="88dp"
            android:text="Meal Name"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivFavouiteIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivMealimage" />

        <ImageView
            android:id="@+id/ivMealimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photoadd"
            app:layout_constraintBottom_toTopOf="@+id/tvMealPrice"
            app:layout_constraintEnd_toStartOf="@+id/tvMealName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvMealPrice" />


    </RelativeLayout>

</LinearLayout>