<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealDetailsFragment"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bbbbb">


        <ImageView
            android:id="@+id/ivMealPicDetails"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="21dp"
            android:src="@drawable/mealpic"
            android:adjustViewBounds="false"
            app:layout_constraintBottom_toTopOf="@+id/tvPriceDetails"
            app:layout_constraintEnd_toEndOf="@+id/tvIngredientsDetails"
            app:layout_constraintStart_toStartOf="@+id/tvPriceDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvMealNameDetails" />

        <TextView
            android:id="@+id/tvPriceDetails"
            android:layout_width="215dp"
            android:layout_height="52dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="31dp"
            android:text="Price"
            android:textColor="@color/background5"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIngredientsDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMealPicDetails" />

        <TextView
            android:id="@+id/tvMealNameDetails"
            android:layout_width="280dp"
            android:layout_height="62dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="11dp"
            android:text="Meal Name"
            android:textColor="@color/background4"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/ivMealPicDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvIngredientsDetails"
            android:layout_width="358dp"
            android:layout_height="137dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="6dp"
            android:text="Details"
            android:textColor="@color/background5"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>