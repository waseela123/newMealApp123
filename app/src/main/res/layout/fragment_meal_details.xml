<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealDetailsFragment"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bbbbb">


        <ImageView
            android:id="@+id/ivMealPicDetails"
            android:layout_width="362dp"
            android:layout_height="300dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/mealpic"
            app:layout_constraintBottom_toTopOf="@+id/tvPriceDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMealNameDetails" />

        <TextView
            android:id="@+id/tvPriceDetails"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="33dp"
            android:text="Price"
            android:textColor="@color/background5"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIngredientsDetails"
            app:layout_constraintEnd_toEndOf="@+id/tvMealNameDetails"
            app:layout_constraintStart_toStartOf="@+id/tvMealNameDetails"
            app:layout_constraintTop_toBottomOf="@+id/ivMealPicDetails" />

        <TextView
            android:id="@+id/tvMealNameDetails"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="9dp"
            android:text="Meal Name"
            android:textColor="@color/background4"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/ivMealPicDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tvIngredientsDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:text="Details"
            android:textColor="@color/background5"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceDetails" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="87dp"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_fav"
            app:layout_constraintBottom_toTopOf="@+id/tvMealNameDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>