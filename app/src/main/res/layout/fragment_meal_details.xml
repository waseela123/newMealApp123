<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealDetailsFragment"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMealPicDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/mealpic"
            app:layout_constraintBottom_toTopOf="@+id/tvIngredientsDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tvPriceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="Price"
            android:textColor="#2C0404"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIngredientsDetails"
            app:layout_constraintStart_toStartOf="@+id/tvMealNameDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvMealNameDetails" />

        <TextView
            android:id="@+id/tvMealNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginBottom="12dp"
            android:text="Meal Name"
            android:textColor="#1E0606"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPriceDetails"
            app:layout_constraintStart_toStartOf="@+id/ivMealPicDetails"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvIngredientsDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="7dp"
            android:text="Details"
            android:textColor="#2C0404"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceDetails" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/picplus"
            app:layout_constraintBottom_toTopOf="@+id/ivMealPicDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>